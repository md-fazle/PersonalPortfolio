@model IEnumerable<portfolio.Models.ProfileImage>

@{
    ViewData["Title"] = "Profile Images";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Upload New Image</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Image</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <img src="@item.ImgPath" alt="Image of @item.Title" style="width: 100px; height: auto;" class="img-thumbnail" />
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">No images available.</td>
            </tr>
        }
    </tbody>
</table>
